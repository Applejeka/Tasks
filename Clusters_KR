import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from sklearn.cluster import KMeans
from sklearn.preprocessing import StandardScaler
from sklearn.decomposition import PCA
data = pd.read_csv('Mall_Customers_Segmentation.csv')
print(data.head())
print(data.info())
print(data.isnull().sum())

sns.pairplot(data[['Spending Score (1-100)','Annual Income (k$)','Age']])
plt.show()

corr_matrix = data[['Spending Score (1-100)','Annual Income (k$)','Age']].corr()
sns.heatmap(corr_matrix, annot=True, cmap='YlGnBu')
plt.show()

data['Genre'] = data['Genre'].apply(lambda x: 1 if x == 'Male' else 0)

scaler = StandardScaler()
data_scaled = scaler.fit_transform(data[['Genre','Spending Score (1-100)','Annual Income (k$)','Age']])
